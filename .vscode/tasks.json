{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Iniciar Servidor Bot",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/Scripts/python.exe",
			"args": [
				"bot/main.py"
			],
			"isBackground": true,
			"group": "none",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"label": "Limpiar Logs",
			"type": "shell",
			"command": "Clear-Content bot_server.log -ErrorAction SilentlyContinue; Clear-Content data/packets.log -ErrorAction SilentlyContinue",
			"problemMatcher": [],
			"presentation": {
				"reveal": "silent",
				"panel": "shared",
				"close": true
			}
		}
	]
}